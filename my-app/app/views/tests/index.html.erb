<p id="notice"><%= notice %></p>

<h1>Tests</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Subject</th>
      <th>Questions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.subject.title if test.subject.present?%></td>
        <td><%= test.questions %></td>
        <td>
          <%= link_to test, class: 'btn btn-info' do %>
              <%= fa_icon 'info-circle', text: 'Show' %>
          <% end %>
        </td>
        <td>
          <%= link_to test, class: 'btn btn-warning' do %>
              <%= fa_icon 'pencil', text: 'Edit' %>
          <% end %>
        </td>
        <td>
          <%= link_to test, method: :delete,class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do %>
              <%= fa_icon 'times', text: 'Remove' %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_test_path, class: 'btn btn-success' do%>
    <%= fa_icon 'plus', text: 'New test' %>
<% end %>

